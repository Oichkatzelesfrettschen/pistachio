.MAKEFLAGS: -r

.if defined(OBJECTDIR)
   MAKEOBJDIR=../../obj/${context}/bsdss
.endif


.if defined(SOURCEDIR)
MAKESRCDIRPATH=${SOURCEDIR}
.else
MAKESRCDIRPATH=""
.endif

BSDSS_I386_CONFIG=STD+WS

KERN_MACHINE_DIR ?=${target_machine}
